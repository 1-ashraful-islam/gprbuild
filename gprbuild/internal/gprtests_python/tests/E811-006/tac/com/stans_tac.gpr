with "stans_tac_naming.gpr";

project Stans_Tac is

   for Source_List_File use "stans_tac_source_list.txt";
   for Source_Dirs use ("../src/stans", "../../common/src");

   package Naming renames Stans_Tac_Naming.Naming;
   for Languages use ("Ada", "C");
   for Object_Dir use "../obj";
   for Exec_Dir use "../img";
   for Main use ("stans_tactical.adb");

   package Builder is
      for Executable ("stans_tactical.adb") use "";
      for Global_Configuration_Pragmas use "gps.adc";
      for Default_Switches ("ada") use ("-s", "-k", "-C");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-g", "-gnatws");
      for Default_Switches ("c") use ("-g", "-w");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is
      for Default_Switches ("c") use ("-g");
   end Linker;

   package Pretty_Printer is
      for Default_Switches ("ada") use ("-aL", "-A1", "-A2", "-A3", "-A4");
   end Pretty_Printer;

end Stans_Tac;
