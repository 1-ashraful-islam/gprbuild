project Prj is
   for Languages use ("Ada", "C");
   for Main use ("main.adb");

   package Builder is
      for Default_Switches ("Ada") use
         ("-cargs:ada", "-O0",
          "-cargs:c", "-O1",
          "-cargs", "-g");
   end Builder;

   package Linker is
      for Driver use "gcc";
   end Linker;
end Prj;

