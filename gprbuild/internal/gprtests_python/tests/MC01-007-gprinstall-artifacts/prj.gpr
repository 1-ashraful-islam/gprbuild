library project Prj is
  for Source_Dirs use ("src");
  for Object_Dir use "obj";
  for Library_Name use "name";
  for Library_Kind use "static";
  for Library_Dir use "lib";

  package Install is
     for Artifacts ("doc") use ("doc/README", "doc/userguide*.html");
     for Artifacts ("css") use ("css/*.css");
     for Artifacts ("share/example") use ("doc/README");
     for Artifacts ("share/examples") use ("doc/examples/*");
  end Install;
end Prj;
