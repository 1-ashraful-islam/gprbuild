library project Prj is

   type OS_Type is ("UNIX", "Windows_NT", "Darwin");
   OS : OS_Type := external ("OS", "UNIX");

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Library_Dir use "lib";
   for Library_Name use "prj";
   for Library_Kind use "static";

   package Naming is
      case OS is
           when "UNIX" =>
             for Body ("pck") use "pck__unix.adb";
           when others =>
             for Body ("pck") use "pck__all.adb";
      end case;
   end Naming;

   package Linker is
      case OS is
         when "UNIX" =>
            for Linker_Options use ("-lforunix");
         when "Darwin" =>
            null;
         when others =>
            for Linker_Options use ("-lforothers");
      end case;
   end Linker;

end Prj;
