
project CMA is

  for Source_Dirs use ("../Inputs/cma");
  for Object_Dir use "../Inputs/cma/Objects";

  package Builder is
    for Default_Switches ("Ada") use
          ("-g");                -- include debug information
    for Global_Configuration_Pragmas use "../Inputs/cma/gnat.adc";
  end Builder;

  package Compiler is
    for Default_Switches ("Ada") use
          ("-gnatn",             -- Inlining across units
           "-gnato",             -- enable overflow checking
           "-O1",                -- Optimisation Level 1
           "-march=pentium4",    -- compatible with P4 instruction set
           "-mtune=pentium4");   -- optimised for P4 pipelining
  end Compiler;

  package Binder is
    for Default_Switches ("Ada") use
          ("-E");                -- enable exception tracebacks
  end Binder;

  package Linker is
    for Linker_Options use ();
 --         ("-lws2_32",           -- Windows sockets library
 --          "-lnetapi32");        -- Windows Network API library
  end Linker;

--  for Externally_Built use "True";
  for Library_Dir use "../Inputs/cma/Library";
  for Library_Name use "cma";
  for Library_Kind use "static";

end CMA;

