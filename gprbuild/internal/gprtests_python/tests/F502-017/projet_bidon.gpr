project Projet_Bidon is

   for Languages use ("Ada", "C");
   for Main use ("main.c");

   package Naming is
      for Specification_Suffix ("c") use ".h";
      for Implementation_Suffix ("c") use ".c";
   end Naming;

   package Builder is
      for Default_Switches ("ada") use ("-g");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-g");
      for Default_Switches ("c") use ("-g");
   end Compiler;

   package Linker is
      for Default_Switches ("ada") use ("-g");
      for Default_Switches ("c") use ("-g");
   end Linker;

end Projet_Bidon;

