with "../../../dds.gpr";
with "../../../gnat_default.gpr";
Project RootPackages is

   for Languages use ("Idl", "Ada", "C");
   for Source_Dirs use (".", "generated");

   for Object_Dir use Gnat_Default'Object_Dir;

   Name := "RootPackages";

   case Gnat_Default.Library_Kind is
      when "None" =>
      when "static" | "dynamic" =>
         for Library_Kind    use Gnat_Default'Library_Kind;
         for Library_Dir     use Gnat_Default'Library_Dir;
         for Library_Src_Dir use Gnat_Default'Library_Src_Dir;
         for Library_Name use Name;
         case Gnat_Default.Library_Kind is
            when "dynamic" =>
               for Library_Auto_Init use "True";
               for Library_Name use Project'Library_Name & Gnat_Default.Dynamic_Lib_Sufix;
               for Library_Interface use ("com",
                                          "com.saabgroup",
                                          "com.saabgroup.cms",
                                          "com.saabgroup.cms.gs",
                                          "com.saabgroup.cms.pha",
                                          "com.saabgroup.cms.pha.meter",
                                          "com.saabgroup.cms.pha.meter_per_second",
                                          "com.saabgroup.cms.pha.meter_per_second_seq",
                                          "com.saabgroup.cms.pha.meter_per_second_square",
                                          "com.saabgroup.cms.pha.meter_per_second_square_seq",
                                          "com.saabgroup.cms.pha.meter_seq",
                                          "com.saabgroup.cms.pha.radian",
                                          "com.saabgroup.cms.pha.radian_per_second",
                                          "com.saabgroup.cms.pha.radian_per_second_seq",
                                          "com.saabgroup.cms.pha.radian_per_second_square",
                                          "com.saabgroup.cms.pha.radian_per_second_square_seq",
                                          "com.saabgroup.cms.pha.radian_seq",
                                          "com.saabgroup.cms.pha.sensor",
                                          "com.saabgroup.cms.pha.valid",
                                          "com.saabgroup.cms.pha.valid_seq",
                                          "com.saabgroup.enterprisebus",
                                          "com.saabgroup.enterprisebus.generalservices",
                                          "com.saabgroup.enterprisebus.meter",
                                          "com.saabgroup.enterprisebus.meter_per_second",
                                          "com.saabgroup.enterprisebus.meter_per_second_seq",
                                          "com.saabgroup.enterprisebus.meter_per_second_square",
                                          "com.saabgroup.enterprisebus.meter_per_second_square_seq",
                                          "com.saabgroup.enterprisebus.meter_seq",
                                          "com.saabgroup.enterprisebus.radian",
                                          "com.saabgroup.enterprisebus.radian_per_second",
                                          "com.saabgroup.enterprisebus.radian_per_second_seq",
                                          "com.saabgroup.enterprisebus.radian_per_second_square",
                                          "com.saabgroup.enterprisebus.radian_per_second_square_seq",
                                          "com.saabgroup.enterprisebus.radian_seq",
                                          "com.saabgroup.enterprisebus.valid",
                                          "com.saabgroup.enterprisebus.valid_seq");
            when "static" =>
               for Library_Name use Project'Library_Name & Gnat_Default.Static_Lib_Sufix;
            when "None" =>
               for Library_Name use Project'Library_Name & Gnat_Default.Static_Lib_Sufix;
         end case;

         case Gnat_Default.Build is
            when "release" =>
               for Library_Name use Project'Library_Name & Gnat_Default.Release_Lib_Sufix;
            when "debug" =>
               for Library_Name use Project'Library_Name & Gnat_Default.Debug_Lib_Sufix;
            when "normal" =>
               for Library_Name use Project'Library_Name & Gnat_Default.Normal_Lib_Sufix;
         end case;
   end case;


   package Builder is
      for Default_Switches ("Ada") use
        GNAT_Default.Builder'Default_Switches ("Ada");
   end Builder;

   package Compiler is
      for Driver ("idl") use "";
      for Default_Switches ("Ada") use
        GNAT_Default.Compiler'Default_Switches ("Ada");
      for Default_Switches ("C") use
        GNAT_Default.Compiler'Default_Switches ("C") &
      DDS.Compiler'Default_Switches ("C");
      for Default_Switches ("idl") use ("-language", "Ada",
                                        "-replace",
                                        "-xml",
                                        "-example", "i86Win32gcc4.1.3",
                                        "-d", "generated");

   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use
        GNAT_Default.Binder'Default_Switches ("Ada");
   end Binder;

   package Linker is
      for Default_Switches ("Ada") use
        DDS.Linker'Default_Switches ("Ada");
   end Linker;

   package Naming is
      for Implementation_Suffix ("idl") use ".idl";
   end Naming;

   package Gnatstub renames Gnat_Default.Gnatstub;
   package Pretty_Printer renames Gnat_Default.Pretty_Printer;


   package IDE is
      for Vcs_Kind use "Subversion";
   end IDE;
end RootPackages;
